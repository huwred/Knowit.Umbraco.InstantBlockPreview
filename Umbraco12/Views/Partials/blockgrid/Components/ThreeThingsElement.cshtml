@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.ThreeThingsElement>>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

<div class="three-things">
    @foreach(var thing in Model.Content.Things.OfType<OneThingElement>())
    {
        <div class="thing">
            <h3>@thing.Headline</h3>
            @thing.Text
        </div>
    }
</div>

<style>
 .three-things {
  display: flex;
  flex-direction: row;
  width: 100%;
  gap: 25px;
  margin: 25px 0;
 }
 .thing {
  flex: 1;
  text-align: center;
  background: #eee;
  border-radius: 25px;

 }
</style>